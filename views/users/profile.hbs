<div class="row col-md-12 mx-auto rounded shadow p-3 mb-5 bg-body bg-opacity-10">
  <div class="col-md-4">
    <img class="rounded mx-auto d-block" src="{{user.image}}"
      style="width: 250px; height: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8 ps-3">
    <p class="user-name fs-4 fw-bolder">{{ user.name }}</p>
    <p class="user-email fs-5">{{ user.email }}</p>
    <div class="d-flex flex-row">
      <p class="user-comment fw-bolder me-4">{{ restComments.length }} 間已評論餐廳</p>
      <p class="user-comment fw-bolder me-4">{{ FavoritedRestaurants.length }} 間已收藏餐廳</p>
      <p class="user-comment fw-bolder">{{ LikedRestaurants.length }} 間喜歡的餐廳</p>
    </div>
    <div class="d-flex flex-row">
      <p class="user-comment fw-bolder me-4">{{ Followings.length }} 位你正在追蹤</p>
      <p class="user-comment fw-bolder">{{ Followers.length }} 位正在追隨你</p>
    </div>
    <a class="btn btn-primary" href="/users/{{user.id}}/edit">Edit</a>
  </div>
  <hr class="mt-3 mb-3">
  <div class="d-flex flex-row justify-content-center col-md-12">
    <div class="col-md-5 me-4">
      {{!-- 追蹤者 --}}
      {{#ifCond Followings.length 0}}
      {{else}}
      <div class="card mb-3">
        <div class="card-header">
          <p class="user-comment fw-bolder" style="margin-bottom: 0;">{{ Followings.length }} 位你正在追蹤</p>
        </div>
        <div class="card-body">
          {{#each Followings}}
          <a href="/restaurants/{{this.id}}" class="text-decoration-none" alt="{{this.name}}">
            <img src="{{this.image}}" class="rounded-circle m-1" style="width: 60px; height: 60px;" title="{{this.name}}">
          </a>
          {{/each}}
        </div>
      </div>
      {{/ifCond}}
      {{!-- 追隨者 --}}
      {{#ifCond Followers.length 0}}
      {{else}}
      <div class="card">
        <div class="card-header">
          <p class="user-comment fw-bolder" style="margin-bottom: 0;">{{ Followers.length }} 位正在追隨你</p>
        </div>
        <div class="card-body">
          {{#each Followers}}
          <a href="/users/{{this.id}}" class="text-decoration-none" alt="{{this.name}}">
            <img src="{{this.image}}" class="rounded-circle m-1" style="width: 60px; height: 60px;" title="{{this.name}}">
          </a>
          {{/each}}
        </div>
      </div>
      {{/ifCond}}
    </div>

    <div class="col-md-6">
      {{!-- 評論餐廳 --}}
      {{#ifCond restComments.length 0}}
      {{else}}
      <div class="card mb-3">
        <div class="card-header">
          <p class="user-comment fw-bolder" style="margin-bottom: 0;">{{ restComments.length }} 間已評論餐廳</p>
        </div>
        <div class="card-body">
          {{#each restComments}}
          <a href="/restaurants/{{this.Restaurant.id}}" class="text-decoration-none" alt="{{this.Restaurant.name}}">
            <img src="{{this.Restaurant.image}}" class="rounded m-1" style="width: 80px; height: 80px;"
              title="{{this.Restaurant.name}}">
          </a>
          {{/each}}
        </div>
      </div>
      {{/ifCond}}
      {{!-- 收藏餐廳 --}}
      {{#ifCond FavoritedRestaurants.length 0}}
      {{else}}
      <div class="card mb-3">
        <div class="card-header">
          <p class="user-comment fw-bolder" style="margin-bottom: 0;">{{ FavoritedRestaurants.length }} 間已收藏餐廳</p>
        </div>
        <div class="card-body">
          {{#each FavoritedRestaurants}}
          <a href="/restaurants/{{this.id}}" class="text-decoration-none" alt="{{this.name}}">
            <img src="{{this.image}}" class="rounded m-1" style="width: 80px; height: 80px;" title="{{this.name}}">
          </a>
          {{/each}}
        </div>
      </div>
      {{/ifCond}}
      {{!-- 喜歡餐廳 --}}
      {{#ifCond LikedRestaurants.length 0}}
      {{else}}
      <div class="card">
        <div class="card-header">
          <p class="user-comment fw-bolder" style="margin-bottom: 0;">{{ LikedRestaurants.length }} 間喜歡的餐廳</p>
        </div>
        <div class="card-body">
          {{#each LikedRestaurants}}
          <a href="/restaurants/{{this.id}}" class="text-decoration-none" alt="{{this.name}}">
            <img src="{{this.image}}" class="rounded m-1" style="width: 80px; height: 80px;" title="{{this.name}}">
          </a>
          {{/each}}
        </div>
      </div>
      {{/ifCond}}
    </div>
  </div>
</div>